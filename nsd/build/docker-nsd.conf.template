server:
        server-count: 4
        do-ip4: yes
        do-ip6: no
        hide-version: yes
        identity: "@@NSD_DOMAIN_NAME@@ authoritative DNS"
        zonesdir: "/etc/nsd"

remote-control:
        control-enable: yes

key:
        name: "sec_key"
        algorithm: hmac-md5
        secret: "WhateverSecretYouUse"

zone:
        name: @@NSD_DOMAIN_NAME@@
        zonefile: @@NSD_DOMAIN_NAME@@.zone
